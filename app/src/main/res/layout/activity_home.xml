<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:fadeScrollbars="false"
    android:layout_weight="1"
    android:background="@drawable/background">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TableRow android:layout_marginBottom="20dp">
            <TextView style="@style/text_white"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/home_desc" />
        </TableRow>

        <TableRow>
            <TextView style="@style/Separator" />
        </TableRow>

        <TableRow>
            <TextView style="@style/HomeSubTitle" android:text="@string/home_deepanse"/>
        </TableRow>

        <TableRow android:padding="7dp" android:layout_marginBottom="20dp">
            <Button style="@style/HomeButton"
                android:id="@+id/button_add_deepanse_by_voice"
                android:drawableTop="@drawable/add_deepanse_by_voice"
                android:text="@string/home_add_deepanse_by_voice" />
            <Button style="@style/HomeButton"
                android:id="@+id/button_add_deepanse_by_hand"
                android:drawableTop="@drawable/add_deepanse_by_hand"
                android:text="@string/home_add_deepanse_by_hand" />
            <Button style="@style/HomeButton"
                android:id="@+id/button_list_deepanse"
                android:drawableTop="@drawable/list_deepanse"
                android:text="@string/home_list_deepanse" />
            <Button style="@style/HomeButton"
                android:id="@+id/button_find_deepanse"
                android:drawableTop="@drawable/find_deepanse"
                android:text="@string/home_find_deepanse" />
        </TableRow>

        <TableRow>
            <TextView style="@style/Separator" />
        </TableRow>

        <TableRow>
            <TextView style="@style/HomeSubTitle" android:text="@string/home_group"/>
        </TableRow>

        <TableRow android:padding="7dp">
            <Button style="@style/HomeButton"
                android:id="@+id/button_add_group"
                android:drawableTop="@drawable/add_group"
                android:text="@string/home_add_group" />
            <Button style="@style/HomeButton"
                android:id="@+id/button_list_group"
                android:drawableTop="@drawable/list_group"
                android:text="@string/home_list_group" />
            <Button style="@style/HomeButton"
                android:id="@+id/button_import_group"
                android:drawableTop="@drawable/import_group"
                android:text="@string/home_import_group" />
        </TableRow>

