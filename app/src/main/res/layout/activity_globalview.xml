<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/layout_buttons_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/background">

        <TableRow>
            <TextView style="@style/Title"
                android:drawableLeft="@drawable/home"
                android:drawableStart="@drawable/home"
                android:text="@string/home_title" />
        </TableRow>

        <TableRow>

            <Button style="@style/ViewButtonTop"
                android:id="@+id/button_back"
                android:drawableLeft="@drawable/up_arrow"
                android:drawableStart="@drawable/up_arrow"
                android:onClick="eventBack" />

            <Button style="@style/ViewButtonTop"
                android:id="@+id/button_backward_date"
                android:drawableLeft="@drawable/left_arrow"
                android:drawableStart="@drawable/left_arrow"
                android:onClick="eventBackwardDate" />

            <TextView style="@style/ViewTextTop"
                android:layout_margin="0dp"
                android:id="@+id/text_main_date" />

            <Button style="@style/ViewButtonTop"
                android:drawableRight="@drawable/right_arrow"
                android:drawableEnd="@drawable/right_arrow"
                android:id="@+id/button_forward_date"
                android:onClick="eventForwardDate" />

            <Button style="@style/ViewButtonTop"
                android:drawableRight="@drawable/home"
                android:drawableEnd="@drawable/home"
                android:id="@+id/button_home"
                android:onClick="eventHome" />
        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:choiceMode="singleChoice"
        android:layout_below="@+id/layout_buttons_top"
        android:layout_above="@+id/layout_buttons_bot" />

    <TableLayout
        android:id="@+id/layout_buttons_bot"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/background">

        <TableRow>
            <Button style="@style/ViewButtonBot"
                android:id="@+id/button_add_deepanse_by_voice"
                android:drawableRight="@drawable/micro"
                android:drawableEnd="@drawable/micro"
                android:text="@string/add_deepanse"
                android:onClick="eventAddDeepanseByVoice" />

            <Button style="@style/ViewButtonBot"
                android:id="@+id/button_add_deepanse_by_keyboard"
                android:drawableRight="@drawable/keyboard"
                android:drawableEnd="@drawable/keyboard"
                android:text="@string/add_deepanse"
                android:onClick="eventAddDeepanseByKeyboard" />

            <TextView style="@style/ViewTextBot"
                android:id="@+id/text_total" />
        </TableRow>
    </TableLayout>
</RelativeLayout>
