<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/layout_buttons_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/background">

        <TableRow>
            <Button style="@style/ViewButton"
                android:id="@+id/button_back"
                android:drawableLeft="@drawable/menu1"
                android:drawableStart="@drawable/menu1"
                android:onClick="eventBack" />

            <Button style="@style/ViewButton"
                android:id="@+id/button_backward_date"
                android:drawableLeft="@drawable/menu1"
                android:drawableStart="@drawable/menu1"
                android:onClick="eventBackwardDate" />

            <TextView style="@style/ViewText"
                android:id="@+id/text_main_date" />

            <Button style="@style/ViewButton"
                android:drawableRight="@drawable/menu1"
                android:drawableEnd="@drawable/menu1"
                android:id="@+id/button_forward_date"
                android:onClick="eventForwardDate" />

            <Button style="@style/ViewButton"
                android:drawableRight="@drawable/menu1"
                android:drawableEnd="@drawable/menu1"
                android:id="@+id/button_home"
                android:onClick="eventHome" />
        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:choiceMode="singleChoice"
        android:layout_below="@+id/layout_buttons_top"
        android:layout_above="@+id/layout_buttons_bot" />

    <TableLayout
        android:id="@+id/layout_buttons_bot"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/background">
        <TableRow>
            <Button style="@style/ViewButton"
                android:id="@+id/button_add_deepanse_by_voice"
                android:layout_weight="1.5"
                android:drawableRight="@drawable/menu1"
                android:drawableEnd="@drawable/menu1"
                android:text="@string/button_add_deepanse"
                android:onClick="eventAddDeepanseByVoice" />

            <Button style="@style/ViewButton"
                android:id="@+id/button_add_deepanse_by_keyboard"
                android:layout_weight="1.5"
                android:drawableRight="@drawable/menu1"
                android:drawableEnd="@drawable/menu1"
                android:text="@string/button_add_deepanse"
                android:onClick="eventAddDeepanseByKeyboard" />

            <TextView style="@style/ViewText"
                android:id="@+id/text_total" />


        </TableRow>
    </TableLayout>
</RelativeLayout>
