<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="20dp" android:right="10dp">
                <shape>
                    <solid android:color="@color/ColorTransBlue" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="20dp" android:right="10dp">
                <shape>
                    <solid android:color="@color/ColorTransWhite" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>