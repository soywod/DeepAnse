<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/ColorBlue" />
                    <corners android:radius="5dp" />
                    <stroke android:color="@color/ColorShadow" android:width="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#ffffff" android:startColor="@color/ColorWhite" android:type="linear" />
                    <corners android:radius="5dp" />
                    <stroke android:color="@color/ColorShadow" android:width="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>