<resources>
    <style name="DeepAnseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/ColorDarkGray</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="ViewTitle">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/ColorWhite</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:shadowColor">@color/ColorShadow</item>
        <item name="android:shadowDx">-4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="ViewButtonTop">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/ColorWhite</item>
        <item name="android:shadowColor">@color/ColorShadow</item>
        <item name="android:shadowDx">-4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="ViewTextTop">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/ColorWhite</item>
        <item name="android:shadowColor">@color/ColorShadow</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:shadowDx">-4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="ViewText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/ColorWhite</item>
        <item name="android:shadowColor">@color/ColorShadow</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:shadowDx">-4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="ViewButtonBot">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:background">@color/ColorTransWhite</item>
        <item name="android:textColor">@color/ColorWhite</item>
        <item name="android:shadowColor">@color/ColorShadow</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:shadowDx">-4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="ViewTextBot">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/ColorWhite</item>
        <item name="android:shadowColor">@color/ColorShadow</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:shadowDx">-4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">3</item>
    </style>





    <style name="Title">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/ColorWhite</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:shadowColor">@color/ColorShadow</item>
        <item name="android:shadowDx">-4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/ColorTransWhite</item>
        <item name="android:textColor">@color/ColorWhite</item>
        <item name="android:shadowColor">@color/ColorShadow</item>
        <item name="android:shadowDx">-4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="HomeButton">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/ColorWhite</item>
        <item name="android:textSize">10sp</item>
        <item name="android:shadowColor">@color/ColorShadow</item>
        <item name="android:shadowDx">-4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">3</item>
    </style>





    <style name="HomeSubTitle">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">start|top</item>
        <item name="android:textColor">@color/ColorGray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:shadowColor">@color/ColorShadow</item>
        <item name="android:shadowDx">-4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">3</item>
    </style>


    <style name="Separator">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/ColorTransWhite</item>
    </style>

    <style name="spinner">
        <item name="android:background">@drawable/spinner</item>
    </style>

    <style name="edit_text">
        <item name="android:background">@drawable/edit_text</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@drawable/button_text</item>
        <item name="android:shadowColor">@color/ColorShadow</item>
        <item name="android:shadowDx">-3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="text_white">
        <item name="android:textColor">@color/ColorWhite</item>
        <item name="android:shadowColor">@color/ColorShadow</item>
        <item name="android:shadowDx">-2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="text_shadow">
        <item name="android:shadowColor">@color/ColorShadow</item>
        <item name="android:shadowDx">-2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
    </style>


</resources>