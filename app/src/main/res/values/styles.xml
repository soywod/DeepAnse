<resources>
    <style name="DeepAnseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#505050</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonLeftTheme" parent="@android:style/Widget.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_left</item>
        <item name="android:padding">0dip</item>
    </style>

    <style name="ButtonRightTheme" parent="@android:style/Widget.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_right</item>
        <item name="android:padding">0dip</item>
    </style>

    <style name="ButtonTheme" parent="@android:style/Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@drawable/button</item>
    </style>







    <style name="ViewButton">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/ColorWhite</item>
        <item name="android:shadowColor">@color/ColorShadow</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="ViewText">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/ColorWhite</item>
        <item name="android:shadowColor">@color/ColorShadow</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">3</item>
    </style>







    <style name="HomeButton">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/ColorBlue</item>
        <item name="android:textSize">10sp</item>
        <item name="android:shadowColor">@color/ColorShadow</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="HomeText">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/ColorWhite</item>
        <item name="android:shadowColor">@color/ColorShadow</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="HomeSeparator">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@color/ColorGray</item>
    </style>

    <style name="HomeTitle">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/ColorBlue</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:shadowColor">@color/ColorGray</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">13</item>
    </style>

    <style name="HomeSubTitle">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">start|top</item>
        <item name="android:textColor">@color/ColorGray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowColor">@color/ColorShadow</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">3</item>
    </style>

</resources>